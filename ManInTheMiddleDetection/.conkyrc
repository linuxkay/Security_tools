background yes
use_xft yes
xftfont HandelGotD:size=9
xftalpha 0.5
update_interval 3.0
total_run_times 0
own_window yes
own_window_argb_visual yes
own_window_type normal
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
minimum_size 210 715
maximum_width 210
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
default_color pink
default_shade_color black 
default_outline_color black
alignment top_right
gap_x 12
gap_y 36
no_buffers yes
uppercase no
cpu_avg_samples 2
override_utf8_locale yes 
#xftfont IPAGothic:style=Regular:size=10


TEXT

#${color}$sysname $kernel on $machine
${color yellow}$loadavg${color} ${color Black}${color} $alignr${color} $uptime${color}
${color Black}Public IP $alignr${color}${execi 300 /home/user/.conky_scripts/ip.sh}
${if_up tun0}${color Black}VPN ${color} $alignr ${color}${addr tun0}${color}
# Wireless Networking
${color white}Signal: ${color}${alignc}${wireless_link_qual wlp3s0}%${if_up wlp3s0}${color white} $alignr ${font FontAwesome:size=9}${font} WiFi${color} $alignr ${color}${addr wlp3s0}${color}
#${color White}${hr}${color}
#${color Yellow}Port${alignr}#Connections
#${color Blue} In: ${tcp_portmon 1 32767 count}${color}  ${color Blue}Out: ${tcp_portmon 32768 61000 count}${color}${alignr} Total: ${tcp_portmon 1 65535 count}
${color Blue}Inbound ${alignr} Local Service/Port$color
${tcp_portmon 1 32767 rip 0} ${alignr} ${tcp_portmon 1 32767 lservice 0}
${tcp_portmon 1 32767 rip 1} ${alignr} ${tcp_portmon 1 32767 lservice 1}
${color Blue}Outbound ${alignr} Remote Service/Port$color
${tcp_portmon 32768 61000 rhost 0} ${alignr} ${tcp_portmon 32768 61000 rservice 0}
${tcp_portmon 32768 61000 rhost 1} ${alignr} ${tcp_portmon 32768 61000 rservice 1}
${tcp_portmon 32768 61000 rhost 2} ${alignr} ${tcp_portmon 32768 61000 rservice 2}${else}
